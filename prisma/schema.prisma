generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Book {
  id            Int           @id @default(autoincrement())
  title         String
  publishedDate DateTime?
  isbn          String?       @unique
  quantity      Int           @default(0)
  authorId      Int
  authors       Author        @relation(fields: [authorId], references: [id], onDelete: Cascade)
  User          User?         @relation(fields: [userId], references: [id])
  userId        Int?
  Transaction   Transaction[]
}

model Author {
  id        Int       @id @default(autoincrement())
  name      String
  birthDate DateTime?
  books     Book[]
}

model User {
  id          Int           @id @default(autoincrement())
  firstName   String
  lastName    String
  email       String        @unique
  password    String
  books       Book[]
  Transaction Transaction[]
}

model Transaction {
  id           Int       @id @default(autoincrement())
  userId       Int
  bookId       Int
  checkoutDate DateTime
  dueDate      DateTime?
  returnDate   DateTime?
  isDue        Boolean   @default(true)
  user         User      @relation(fields: [userId], references: [id])
  book         Book      @relation(fields: [bookId], references: [id])
}
